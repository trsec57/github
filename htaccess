ErrorDocument 404 http://blog.slgonzalez.com/
ErrorDocument 500 http://blog.slgonzalez.com/
# or map them to one error document:
# ErrorDocument 404 http://blog.slgonzalez.com/
# ErrorDocument 500 http://blog.slgonzalez.com/

RewriteEngine On
RewriteBase /

RewriteCond %{REQUEST_URI} ^/404/$
RewriteRule ^(.*)$ http://blog.slgonzalez.com/ [L]

RewriteCond %{REQUEST_URI} ^/500/$
RewriteRule ^(.*)$ http://blog.slgonzalez.com/ [L]

# or map them to one error document:
#RewriteCond %{REQUEST_URI} ^/404/$ [OR]
#RewriteCond %{REQUEST_URI} ^/500/$
#RewriteRule ^(.*)$ http://blog.slgonzalez.com/